<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
    <% if !Like.exists?(user_id:current_user.id,micropost_id:micropost.id) %>
    <%= link_to "&#9829;".html_safe, micropost_like_path(micropost),id: "like", method: :post%>
    <% else %>
    <%= link_to "&#9829;".html_safe, micropost_like_path(micropost),id: "unlike", method: :delete %>
    <% end %>
      <%= link_to "reply", micropost_reply_path(micropost) %>
  </span>
</li>

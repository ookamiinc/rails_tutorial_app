<div class="col-md-offset-3">
  <%= form_for(:reply,url:micropost_path,method: :post) do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Create reply..." %>
  </div>
 <span class="picture">
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
 </span>
  <div><%= f.hidden_field :reply_to, value: @origin.id %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
</div>
